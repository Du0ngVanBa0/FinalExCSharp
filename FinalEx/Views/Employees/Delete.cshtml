@model FinalEx.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    ViewData["css"] = "Employee/Delete.css";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Delete Employee</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div class="card mb-4">
    <div class="card-body">
        <h4>@Model.FullName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Date of Birth</dt>
            <dd class="col-sm-9">@Model.DateOfBirth</dd>

            <dt class="col-sm-3">Position</dt>
            <dd class="col-sm-9">@Model.Position</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department.Name</dd>

            <dt class="col-sm-3">Salary</dt>
            <dd class="col-sm-9">@Model.Salary</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
