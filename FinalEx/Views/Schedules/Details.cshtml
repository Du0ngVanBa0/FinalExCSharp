@model FinalEx.Models.Schedule

@{
    ViewData["Title"] = "Details";
    ViewData["css"] = "Posts/Detail.css";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Schedule Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">@Model.Title</h2>
        <p class="text-muted">Start Date: @Model.StartDate.ToString("dd/MM/yyyy")</p>
        <p class="text-muted">End Date: @Model.EndDate.ToString("dd/MM/yyyy")</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p><strong>Author:</strong> @Model.User.Name</p>
        <div class="mt-4">
            @Html.Raw(Model.Content.Replace("\n", "<br/>"))
        </div>
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="mt-4">
                <img src="@Model.Image" alt="Post Image" class="img-fluid" />
            </div>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
