@model FinalEx.Models.Post

@{
    ViewData["Title"] = "Delete";
    ViewData["css"] = "Posts/Delete.css";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Delete Post</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PostedDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PostedDate)
            </dd>
            <dt class="col-sm-3">
                Author
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.User.Name)
            </dd>
            <dt class="col-sm-3">
                Category
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" alt="Post Image" class="img-fluid" />
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
